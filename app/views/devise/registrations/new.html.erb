<div class="login-form">
  <%= form_for(resource,as: resource_name,url: registration_path(resource_name)) do |f| %>
    <h2 class="text-center">Sign up</h2>       
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder: "abcdefg@gmail.com" %>
    </div>    
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new_password",class: "form-control",placeholder: "Password" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>

    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new_password",class: "form-control",placeholder: "Confrim your password" %>
    </div>
    <div class="form-group">
      <%= f.submit "Signup",class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <p class="text-center">
    <%= render "devise/shared/links" %>
  </p>
  <% end %>
</div>